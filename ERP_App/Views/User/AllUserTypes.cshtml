@model IEnumerable<ERP_App.Models.UserTypeMV>

@{
    ViewBag.Title = "User Types";
}

<h2></h2>

<p>
    
</p>
<!-- DATATABLE DEMO 2-->
<div class="card">
    <div class="card-header">
        <div class="card-title">User Types</div>
        
    </div>
    <div class="card-body">
        <div>@Html.ActionLink("New User Type", "CreateUserType", null, new { @class = "btn btn-primary" })</div>
        <hr />
        <table class="table table-striped my-4 w-100" id="datatable2">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.UserType)
                    </th>
                    <th>
                        Action
                    </th>
                </tr>
            <thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserType)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "EditUserType", new { usertypeid = item.UserTypeID }, new { @class = "btn btn-warning" })
                            @Html.ActionLink("Delete", "Delete", new { id = item.UserTypeID }, new { @class = "btn btn-danger" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>