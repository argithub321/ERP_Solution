@model IEnumerable<ERP_App.Models.AccountHeadMV>

@{
    ViewBag.Title = "Account Head's";
}

<div class="card">
    <div class="card-header">
        <div class="card-title">Account Heads</div>

    </div>
    <div class="card-body">
        <div>@Html.ActionLink("New Account Head", "CreateAccountHead", null, new { @class = "btn btn-primary" })</div>
        <hr />
        <table class="table table-striped my-4 w-100" id="datatable2">
            <thead>
                <tr>
                    <th>
                        Account Head
                    </th>
                    <th>
                        Code
                    </th>
                    <th>
                        Created By
                    </th>
                    <th>
                        Action
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.AccountHeadName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Code)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreatedBy)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "EditAccountHead", new { accountheadid = item.AccountHeadID }, new { @class = "btn btn-warning" })

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
